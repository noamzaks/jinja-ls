{
  "name": "jinja-ls",
  "private": "true",
  "main": "./dist/extension",
  "scripts": {
    "compile": "rollup -c",
    "watch": "rollup -c -w",
    "package": "npm run compile && vsce package --no-dependencies",
    "test-e2e": "npm run compile && node dist/tests/run.js",
    "test-language": "vitest run --root packages/language",
    "lint": "npm run eslint packages"
  },
  "extensionDependencies": [
    "samuelcolvin.jinjahtml"
  ],
  "displayName": "Jinja Language Server",
  "description": "Feature-rich language server for Jinja.",
  "version": "0.0.5",
  "author": "Noam Zaks <noam@noamzaks.com> (https://noamzaks.com/)",
  "icon": "images/icon-1024.png",
  "license": "MIT",
  "sponsor": {
    "url": "https://github.com/sponsors/noamzaks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noamzaks/jinja-ls"
  },
  "workspaces": [
    "packages/*"
  ],
  "publisher": "noamzaks",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:jinja",
    "onLanguage:jinja-html",
    "onLanguage:jinja-xml",
    "onLanguage:jinja-css",
    "onLanguage:jinja-json",
    "onLanguage:jinja-md",
    "onLanguage:jinja-yaml",
    "onLanguage:jinja-toml",
    "onLanguage:jinja-lua",
    "onLanguage:jinja-properties",
    "onLanguage:jinja-shell",
    "onLanguage:jinja-dockerfile",
    "onLanguage:jinja-sql",
    "onLanguage:jinja-py",
    "onLanguage:jinja-cy",
    "onLanguage:jinja-terraform",
    "onLanguage:jinja-nginx",
    "onLanguage:jinja-groovy",
    "onLanguage:jinja-systemd",
    "onLanguage:jinja-cpp",
    "onLanguage:jinja-java",
    "onLanguage:jinja-js",
    "onLanguage:jinja-ts",
    "onLanguage:jinja-php",
    "onLanguage:jinja-cisco",
    "onLanguage:jinja-rust"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jinja-ls.restart",
        "title": "Jinja LS: Restart Server"
      }
    ],
    "configuration": {
      "title": "Jinja LS",
      "properties": {
        "jinjaLS.importPaths": {
          "type": "array",
          "default": [],
          "description": "Additional paths to search for include/import/extends",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.5.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
