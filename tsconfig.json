{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2024",
    "lib": [
      "ES2024"
    ],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "references": [
    {
      "path": "./packages/language"
    },
    {
      "path": "./packages/server"
    },
    {
      "path": "./packages/client"
    },
  ]
}