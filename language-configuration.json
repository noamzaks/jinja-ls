{
  "comments": {
    "blockComment": ["{#", "#}"]
  },
  "brackets": [
    ["{#", "#}"],
    ["{%", "%}"],
    ["{{", "}}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["@/", "/"],
    ["{#", "#}"],
    ["{%", "%}"],
    ["{{", "}}"],
    ["{# ", " #}"],
    ["{% ", " %}"],
    ["{{ ", " }}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    [" ", " "]
  ],
  "folding": {
    "markers": {
      "start": "{%[-+]?\\s*(set|block|filter|for|call|if|macro|with|raw)",
      "end": "{%[-+]?\\s*end(set|block|filter|for|call|if|macro|with|raw)(?:\\s+\\w+)?\\s*[-+]?%}"
    }
  }
}
